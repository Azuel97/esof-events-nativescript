<Page
    navigatingTo="onNavigatingTo"
    xmlns:lv="nativescript-ui-listview">

    <ActionBar class="schedule">
        <Label text="{{ isLogin }}"></Label>
        <ActionItem tap="showDialog" ios.position="right" ios.systemIcon="17"></ActionItem>
        <ActionItem tap="showFunctions" ios.position="left" ios.systemIcon="9"></ActionItem>
    </ActionBar>

    <GridLayout visibility="{{ isLogin ? 'visible' : 'collapsed' }}">
    <lv:RadListView items="{{ items }}" >
        <lv:RadListView.itemTemplate>
            <StackLayout orientation="vertical" class="list-group-item">
                <StackLayout class="wrap">
                <Label text="{{ nome }}" textWrap="true" class="border-list" font-size="16"></Label>
                <Label text="{{ sub }}" textWrap="true" class="border-list sub" font-size="12"></Label>
                </StackLayout>
                <StackLayout
                    class="separator"
                    height="1"
                    marginTop="0"
                    backgroundColor="#C0C0C0">
                </StackLayout>
            </StackLayout>
        </lv:RadListView.itemTemplate>
    </lv:RadListView>
    </GridLayout>

</Page>
